<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>frontend</id>
    <includeBaseDirectory>false</includeBaseDirectory>
    <formats>
        <format>tar.gz</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}/target/generated-sources/frontend/apis</directory>
            <outputDirectory>/apis</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/target/generated-sources/frontend/models</directory>
            <outputDirectory>/models</outputDirectory>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>${project.basedir}/target/generated-sources/frontend/index.ts</source>
            <outputDirectory>/</outputDirectory>
        </file>
        <file>
            <source>${project.basedir}/target/generated-sources/frontend/runtime.ts</source>
            <outputDirectory>/</outputDirectory>
        </file>
    </files>
</assembly>
